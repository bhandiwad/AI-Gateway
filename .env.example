# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_gateway

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
SESSION_SECRET=change-this-to-a-random-secret-key-in-production

# AI Provider API Keys (OPTIONAL - Users bring their own via Provider Configs)
# These gateway-level keys are only needed for:
# - Quick testing with mock responses
# - System-wide shared access (not recommended for multi-tenant)
# - Development demos
# In production, each tenant configures their own provider credentials
OPENAI_API_KEY=sk-your-openai-api-key-here-if-needed
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here-if-needed

# Telemetry (Optional)
OTLP_ENDPOINT=

# Feature Flags
ENABLE_TELEMETRY=true
ENABLE_SEMANTIC_CACHE=true
ENABLE_CONTENT_ROUTING=true
ENABLE_STREAM_INSPECTION=true
ENABLE_GUARDRAILS=true
ENABLE_RATE_LIMITING=true
ENABLE_USAGE_LOGGING=true
